class_name PropertiesPanel extends VBoxContainer


@onready var PropertiesContainer := %PropertiesContainer

var SectionLabel := preload("res://src/panels/properties/section_label.tscn")


func begin_section(section: String, icon: Texture2D) -> void:
	var sec = SectionLabel.instantiate().setup(section, icon)
	PropertiesContainer.add_child(sec)

func add_property(prop: PropWidget) -> void:
	pass

func push_group(group: String) -> void:
	pass

func pop_group() -> void:
	pass

func next_group(group: String) -> void:
	## push pop
	pop_group()
	push_group(group)

func clear():
	for prop in PropertiesContainer.get_children():
		prop.queue_free()

##############################
func _ready():
	_demo()
	if Utils.is_main(self):
		_demo()

func _demo():
	print("Running demo for properties panel...")
	begin_section("Section 1", load("res://icon.svg"))
